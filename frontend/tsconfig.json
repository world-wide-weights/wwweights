{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "types": [
            "cypress",
            "node"
        ]
    },
    "include": [
        "next-env.d.ts",
        "types/**/*.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "postcss.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}